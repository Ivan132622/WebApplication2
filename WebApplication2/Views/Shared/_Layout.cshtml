<!DOCTYPE html>
<html>
<head>
    <script type="text/javascript">
        function cambiarClase() {
            let siteNav = document.getElementById('site-nav');
            siteNav.classList.toggle('site-nav-open');
            let menuOpen = document.getElementById('menu-toggle');
            menuOpen.classList.toggle('menu-open');

        }
    </script>

    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css">


    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - CompleteSpeech Clinic</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/MiBundle")

    <link href="~/Content/assets/css/footer.css" rel="stylesheet" />
    <link href="~/fonts/newfont/fuentes.css" rel="stylesheet" />
    <link href="~/Content/assets/css/menu.css" rel="stylesheet" />
    <link rel="shortcut icon" type="image/x-icon" href="~/images/Home/completeS.ico">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    
    <div style="position:absolute; z-index:999999; text-align:right; width:100%;">
        <br />
       
        <header>
            <div class="container2">
                <img class="logo" src="~/Content/assets/img/HOME/SmartPalate-logo-blanco.png"> 

            </div>

            <nav id="site-nav" class="site-nav"  >
                <ul>
                    <li><a href="Index"><i class="fa fa-home "></i> Home</a></li>
                    <li><a href="About"><i ></i>About Us</a></li>
                    <li><a href="forum"><i ></i>Forum</a></li>
                    <li><a href="Contact"><i></i>Contact Us</a></li>
                    <li><a href="use"><i ></i>How to use</a></li>                    
                    <li><a href="conditions"><i class="fa fa-fw fa-user"></i> Login</a></li>
                    <li>
                        <div style="text-align:center;">
                            <input placeholder="&#xF002;" type="search" aria-label="Search" style="border-radius:15px; font-family:Arial, FontAwesome; max-height:20px; max-width:150px;">
                        </div>
                    </li>
                   

                </ul>
               
            </nav>            
            <div id="menu-toggle" class="menu-toggle" onClick="cambiarClase()">
                <div class="hamburger"></div>
            </div>
        </header>
    </div>
    
    <div class="container-fluid">
        @RenderBody()

        <!--FOOTER-->
        <footer class="footer text-center ">
            <img src="~/images/footer/SmartPalate-Web-sp-gray.png" />
            <p>SmartPalate LLC 154 W Main.American Fork, UT 84003</p>
            <img src="~/images/footer/SmartPalate-Web-phone2.png" />
            <p>385-498-3555</p>
            <p>&copy; 2021smartpalate</p>
        </footer>


        @*<footer>
            <center>
                <img src="~/images/HowToUse/footer.png" />
            </center>

        </footer>*@
    </div>
   
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
